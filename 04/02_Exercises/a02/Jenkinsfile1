pipeline {
    environment {
        registry = 'varelambzz/traffic-light:latest'
        registryCredential = 'varelambzz'
    }
    agent any
    stages {
        stage('Cloning repo') {
            steps {
                git branch: 'main', url: 'https://github.com/varelam-bzz/traffic-light.git'
            }
        }
        
        stage('Building image') {
            steps {
                script {
                    docker.build registry
                }
            }
        }
    }
}